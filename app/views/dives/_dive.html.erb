<li id="dive-<%= dive.id %>">
  <%= link_to gravatar_for(micropost.user, size: 50), micropost.user %>
  <span class="user"><%= link_to micropost.user.name, micropost.user %></span>
  
  <div class="content">
    <table>
      <tr><td>Depth</td>
          <td><strong><%= dive.depth %>m</strong></td>
      </tr>
      <tr><td>Duration</td>
          <td><strong><%= dive.duration %>minutes</strong></td>
      </tr>
      <tr><td>Temperature</td>
          <td><%= dive.temperature %>Â°C</strong></td>
      </tr>
      <tr><td>Starttime</td>
          <td><%= dive.starttime.strftime("%A, %d-%m-%Y, %H:%M")%></strong></td>
      </tr>
      <tr><td>Dive</td>
          <td>#<%= dive.divenumber %></strong></td>
      </tr>
      <tr><td>Location</td>
          <td><%= dive.location %></strong></td>
      </tr>
      <tr><td>Country</td>
          <td><%= dive.country %></strong></td>
      </tr>
    <strong>
    </table>
  </div>
  
  <span class="timestamp">
    Logged <%= time_ago_in_words(dive.created_at) %> ago.
    <% if current_user?(dive.user) %>
      <%= link_to "delete", micropost, method: :delete,
                                       data: { confirm: "Delete dive?" } %>
      <% end %>
  </span>
</li>
